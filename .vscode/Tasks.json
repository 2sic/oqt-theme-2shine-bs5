{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "dotnet",
      "args": ["pack", "-c", "Release"],
      "problemMatcher": "$msCompile",
      "group": {
        "_id": "build",
        "isDefault": true
      }
    },
    {
      "label": "watch build (debug)",
      "type": "shell",
      "command": "dotnet",
      "args": ["watch", "build", "-c", "Debug"],
      "problemMatcher": "$msCompile",
      "group": {
        "_id": "build",
        "isDefault": false
      },
      "options": {
        "cwd": "${workspaceFolder}/Client"
      }
    }
  ]
}
