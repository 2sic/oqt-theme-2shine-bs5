@namespace ToSic.Oqt.Themes.ToShineBs5.CenteredSubmenu
@inherits ToSic.Oqt.Themes.ToShineBs5.Default

@{ 
    base.BuildRenderTree(__builder);
}

@code{
    public override List<Resource> Resources => new List<Resource>()
    {
        // Load Theme which contains Bootstrap with our customizations (generated with Sass using Webpack)
        new Resource { ResourceType = ResourceType.Stylesheet, Url = ThemePath().Replace(".CenteredSubmenu", "") + "theme.min.css" },
        // Load the default BS JS
        new Resource { ResourceType = ResourceType.Script, Url = ThemePath().Replace(".CenteredSubmenu", "") + "bootstrap.bundle.min.js" },
        // Our custom code which ensures page classes, Up-button etc.
        new Resource { ResourceType = ResourceType.Script, Url = ThemePath().Replace(".CenteredSubmenu", "") + "background.js" },
    };

    public override string Name => "centered-submenu";
}