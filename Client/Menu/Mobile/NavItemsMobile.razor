@using ToSic.Oqt.Themes.ToShineBs5.Client.Menu.Main;
@inherits NavItems;

@if(PageNavigator.HasChildren)
{
    <ul class="@(PageNavigator.CurrentPage == null || PageNavigator.First == true ? "navbar-nav" : @UlClasses())">
        @if (PageNavigator.HasChildren)
        {
            @foreach(var pageNav in PageNavigator.Children)
            {
                <NavItemMobile PageNavigator="pageNav"></NavItemMobile>
            }
        }
    </ul>
}

@code{
    private string UlClasses()
    {
        return "ul-collapse collapse collapse-" + @PageNavigator.CurrentPage.PageId;
    }
}