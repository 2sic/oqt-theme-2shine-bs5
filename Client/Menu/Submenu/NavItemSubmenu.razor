@inherits MenuBase;

@if(PageNavigator != null)
{
    <li class="@liCLasses()">
        <a class="@aClasses()" target="" data-bs-toggle="@aDataBsToggle()" href="@aHref()">
            @PageNavigator.CurrentPage.Name
        </a>

        @if(PageNavigator.HasChildren)
        {
            <span class='nav-item-sub-opener @(PageNavigator.CurrentPage.PageId == this.PageState.Page.PageId ? "" : "collapsed")' data-bs-toggle= data-bs-target=".dropdown" + @PageNavigator.CurrentPage.PageId></span>
            <NavItemsSubmenu PageNavigator="PageNavigator"></NavItemsSubmenu>
        }
    </li>
}